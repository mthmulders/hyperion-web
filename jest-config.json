{
    "collectCoverage": true,
    "collectCoverageFrom": [
        "app/*.{ts,tsx}",
        "app/**/*.{ts,tsx}",
        "!app/*.d.ts",
        "!app/**/*.d.ts",
        "!app/__tests__/*.ts",
        "!app/__tests__/**/*.ts"
    ],
    "coverageDirectory": "coverage/",
    "moduleFileExtensions": [ "ts", "tsx", "js" ],
    "rootDir": ".",
    "setupFiles": [ "./setupJest.js" ],
    "testPathDirs": [ "app/" ],
    "testRegex": "/__tests__/.*Spec\\.tsx?$",
    "testResultsProcessor": "<rootDir>/jestResultsProcessor.js",
    "transform": {
        ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": true
}